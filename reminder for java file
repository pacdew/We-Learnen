package projekt;

import java.util.Scanner;

public class Hola {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		double temp = 0;
		double calculation = 0;
		double userNumber1 = 0;
		double userNumber2 = 0;
		double answer = 0;
		
		String choice;
		
		System.out.println("Would you like to add, subtract, multiply, divide, or calculate the fibonacci sequence?");
		choice = input.nextLine();
		
		
		if(choice.charAt(0) == 'a') {
			System.out.println("Please enter the first number: ");
			userNumber1 = input.nextDouble();
			System.out.println("Please enter the second number: ");
			userNumber2 = input.nextDouble();
			
			calculation = userNumber1 + userNumber2;
			
			System.out.printf("Answer = %.0f", calculation);
		}
		else if(choice.charAt(0) == 's') {
			System.out.println("Please enter the first number: ");
			userNumber1 = input.nextDouble();
			System.out.println("Please enter the second number: ");
			userNumber2 = input.nextDouble();
			
			calculation = userNumber1 - userNumber2;
			
			System.out.printf("Answer = %.0f", calculation);
		}
		else if(choice.charAt(0) == 'm') {
			System.out.println("Please enter the first number: ");
			userNumber1 = input.nextDouble();
			System.out.println("Please enter the second number: ");
			userNumber2 = input.nextDouble();
			
			calculation = userNumber1 * userNumber2;
			
			System.out.printf("Answer = %.0f", calculation);
		}
		else if(choice.charAt(0) == 'd') {
			System.out.println("Please enter the first number: ");
			userNumber1 = input.nextDouble();
			System.out.println("Please enter the second number: ");
			userNumber2 = input.nextDouble();
			
			calculation = userNumber1 / userNumber2;
			
			System.out.printf("Answer = %.0f", calculation);
		}
		else if(choice.charAt(0) == 'f') {
			System.out.println("How many values would you like to calculate?");
			userNumber1 = input.nextDouble();
			
			System.out.printf("%.0f%n", calculation);
			calculation += 1;
			
			for(int i = 1; i < userNumber1; i++) {
				temp = calculation;
				calculation = answer;
				answer = calculation + temp;
				System.out.printf("%.0f%n", answer);
			}
			
		}
		else {
			System.out.println("Invalid input");
		}
	
		input.close();
	}
}
